<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _30SecondsNambiaStyle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_30SecondsNambiaStyle.styles.css" asp-append-version="true" />
    <style>
        /* Add some extra visual flair to the page */
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        /* Flag styling */
        .flag-container {
            position: absolute;
            top: 10px;
            right: 10px;
      
        }

        /* Flag image styling */
        .flag-image {
            max-width: 40px; 
            height: auto;
            margin-right:10px;
        }


        .card-title {
            color: #0074d9; /* Namibian blue */
        }

        .list-group-item {
            background-color: #f4f4f4;
        }

            .list-group-item:nth-child(odd) {
                background-color: #fff;
            }

            .list-group-item:hover {
                background-color: #eeeeee;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Right-aligned flag using Bootstrap flex utilities -->
                <div class="d-flex ms-auto mr-1">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/0/00/Flag_of_Namibia.svg" alt="Namibian Flag" class="flag-image" />
                </div>

                <!-- Navbar brand on the left -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> 30SecondsNambiaStyle</a>

                <!-- Navbar Toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
           

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- You can add footer content here -->
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
